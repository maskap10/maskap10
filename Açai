    <script>
        // Configura√ß√µes de pre√ßos
        const config = {
            precosTamanho: {
                '150ml': 5.00,
                '200ml': 8.00,
                '250ml': 9.00,
                '350ml': 11.00,
                '500ml': 17.00,
                '1lt': 30.00,
                'Barca P': 20.00,
                'Barca G': 30.00,
                'Hamburgueira P': 10.00,
                'Hamburgueira M': 11.00,
                'Hamburgueira G': 17.00
            },
            precoAdicional: 2.00,
            numeroWhatsApp: '5584999805340'
        };

        // Elementos DOM
        const elementos = {
            size: document.getElementById('size'),
            adicionais: document.getElementById('adicionais'),
            totalPedido: document.getElementById('total-pedido'),
            nome: document.getElementById('nome'),
            sabor1: document.getElementById('sabor1'),
            sabor2: document.getElementById('sabor2'),
            calda: document.getElementById('calda'),
            viagem: document.getElementById('viagem')
        };

        // Fun√ß√µes
        const calcularTotal = () => {
            const valorTamanho = config.precosTamanho[elementos.size.value] || 0;
            const qtdAdicionais = elementos.adicionais.selectedOptions.length;
            const total = valorTamanho + (qtdAdicionais * config.precoAdicional);
            
            elementos.totalPedido.textContent = total.toLocaleString('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            });
            
            return total;
        };

        const validarPedido = () => {
            if(!elementos.nome.value.trim()) {
                alert('Por favor, digite seu nome!');
                return false;
            }
            if(elementos.sabor1.value === elementos.sabor2.value) {
                alert('Selecione dois sabores diferentes!');
                return false;
            }
            return true;
        };

        const enviarPedido = (event) => {
            event.preventDefault();
            
            if(!validarPedido()) return;

            try {
                const adicionais = Array.from(elementos.adicionais.selectedOptions)
                    .map(option => option.value);
                
                const mensagem = [
                    `*PEDIDO - ${elementos.nome.value}*`,
                    '',
                    `üç® *Sabores:* ${elementos.sabor1.value} + ${elementos.sabor2.value}`,
                    `üìè *Tamanho:* ${elementos.size.value} (${config.precosTamanho[elementos.size.value].toLocaleString('pt-BR', {style: 'currency', currency: 'BRL'})})`,
                    `üçØ *Calda:* ${elementos.calda.value}`,
                    `‚ú® *Adicionais (${adicionais.length}x):* ${adicionais.join(', ') || 'Nenhum'} (${(adicionais.length * config.precoAdicional).toLocaleString('pt-BR', {style: 'currency', currency: 'BRL'})})`,
                    `üìç *Viagem:* ${elementos.viagem.value}`,
                    '',
                    `üíµ *TOTAL: ${calcularTotal().toLocaleString('pt-BR', {style: 'currency', currency: 'BRL'})}*`
                ].join('\n');

                const url = `https://wa.me/${config.numeroWhatsApp}?text=${encodeURIComponent(mensagem)}`;
                window.open(url, '_blank');

            } catch (error) {
                alert(`Erro: ${error.message}`);
            }
        };

        // Event Listeners
        elementos.size.addEventListener('change', calcularTotal);
        elementos.adicionais.addEventListener('change', calcularTotal);

        // Inicializa√ß√£o
        calcularTotal();
    </script>
